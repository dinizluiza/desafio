CREATE TABLE paciente1 ( 
    id INT PRIMARY KEY, 
    nome VARCHAR2(100), 
    dt_nascimento DATE, 
    cpf INT, 
    nome_mae VARCHAR2(100), 
    dt_atualizacao DATE 
);

CREATE TABLE paciente2 ( 
    id INT PRIMARY KEY, 
    nome VARCHAR2(100), 
    dt_nascimento DATE, 
    cpf INT, 
    nome_mae VARCHAR2(100), 
    dt_atualizacao DATE 
);

CREATE TABLE paciente3 ( 
    id INT PRIMARY KEY, 
    nome VARCHAR2(100), 
    dt_nascimento DATE, 
    cpf INT, 
    nome_mae VARCHAR2(100), 
    dt_atualizacao DATE 
);

