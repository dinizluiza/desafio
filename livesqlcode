CREATE TABLE paciente_tudinho AS
    SELECT *
    FROM paciente1
    UNION ALL
    SELECT *
    FROM paciente2
    UNION ALL
    SELECT *
    FROM paciente3;

SELECT * FROM paciente_tudinho;

SELECT nome, dt_nascimento, cpf, nome_mae
FROM paciente_tudinho
GROUP BY nome, dt_nascimento, cpf, nome_mae
HAVING COUNT(*) > 1;

SELECT nome, dt_nascimento, cpf, nome_mae, MAX(dt_atualizacao)
FROM paciente_tudinho
GROUP BY nome, dt_nascimento, cpf, nome_mae
HAVING COUNT(*) > 1;